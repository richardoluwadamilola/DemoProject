@using DemoProject.Models.ViewModels

@model Dictionary<string, List<OnboardedCandidatesViewModel>>

<!DOCTYPE html>
<html>
<head>
    <title>Onboarded Candidates</title>
</head>
<body>
    <h1>Onboarded Candidates</h1>
    @foreach (var schoolCode in Model.Keys)
    {
        <table border="1">
            <thead>
                <tr>
                    <th>Candidate ID</th>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>School Code</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var candidate in Model[schoolCode])
                {
                    <tr>
                        <td>@candidate.CandidateId</td>
                        <td>@candidate.FirstName</td>
                        <td>@candidate.LastName</td>
                        <td>@candidate.SchoolCode</td>
                    </tr>
                }
            </tbody>
        </table>
    }
</body>
</html>